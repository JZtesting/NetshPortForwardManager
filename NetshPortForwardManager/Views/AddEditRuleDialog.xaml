<Window x:Class="NetshPortForwardManager.Views.AddEditRuleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:NetshPortForwardManager.Models"
        Title="Add/Edit Port Forward Rule" Height="400" Width="450"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Listen Port -->
        <Label Grid.Row="0" Grid.Column="0" Content="Listen Port:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="0" Grid.Column="1" Name="ListenPortTextBox" 
                 Text="{Binding ListenPort, UpdateSourceTrigger=PropertyChanged}"
                 Margin="0,5" Height="25"/>

        <!-- Listen Address -->
        <Label Grid.Row="1" Grid.Column="0" Content="Listen Address:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" Name="ListenAddressTextBox"
                 Text="{Binding ListenAddress, UpdateSourceTrigger=PropertyChanged}"
                 Margin="0,5" Height="25"/>

        <!-- Forward Port -->
        <Label Grid.Row="2" Grid.Column="0" Content="Forward Port:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="2" Grid.Column="1" Name="ForwardPortTextBox"
                 Text="{Binding ForwardPort, UpdateSourceTrigger=PropertyChanged}"
                 Margin="0,5" Height="25"/>

        <!-- Forward Address -->
        <Label Grid.Row="3" Grid.Column="0" Content="Forward Address:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="3" Grid.Column="1" Name="ForwardAddressTextBox"
                 Text="{Binding ForwardAddress, UpdateSourceTrigger=PropertyChanged}"
                 Margin="0,5" Height="25"/>

        <!-- Protocol -->
        <Label Grid.Row="4" Grid.Column="0" Content="Protocol:" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="4" Grid.Column="1" Name="ProtocolComboBox"
                  SelectedItem="{Binding Protocol}"
                  Margin="0,5" Height="25">
            <ComboBox.Items>
                <x:Static Member="local:ProtocolType.V4ToV4"/>
                <x:Static Member="local:ProtocolType.V4ToV6"/>
                <x:Static Member="local:ProtocolType.V6ToV4"/>
                <x:Static Member="local:ProtocolType.V6ToV6"/>
            </ComboBox.Items>
        </ComboBox>

        <!-- Preview -->
        <Label Grid.Row="5" Grid.Column="0" Content="Preview:" VerticalAlignment="Top" Margin="0,10,0,0"/>
        <TextBox Grid.Row="5" Grid.Column="1" Name="PreviewTextBox"
                 Text="{Binding PreviewCommand}"
                 IsReadOnly="True" TextWrapping="Wrap" 
                 Height="60" Margin="0,10,0,0"
                 VerticalScrollBarVisibility="Auto"/>

        <!-- Validation -->
        <TextBlock Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" 
                   Name="ValidationTextBlock" 
                   Text="{Binding ValidationMessage}"
                   Foreground="Red" Margin="0,10,0,0"
                   TextWrapping="Wrap"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Name="OkButton" Content="OK" Width="75" Height="30" 
                    Margin="0,0,10,0" Click="OkButton_Click" IsDefault="True"/>
            <Button Name="CancelButton" Content="Cancel" Width="75" Height="30" 
                    Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>